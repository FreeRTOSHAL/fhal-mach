menu "Mach Settings"
choice 
	prompt "Select Mach"
	config MACH_VF610
		bool "VF610-M4"
		depends on ARCH_ARM
		depends on ARCH_ARM_CORTEX_M4F || ARCH_ARM_CORTEX_M3
		help 
			vF610 M4 Mach
	config MACH_LINUX
		bool "Linux Emulator"
		depends on ARCH_X86
		depends on ARCH_X86_LINUX
		select INCLUDE_xTaskGetCurrentTaskHandle
	config MACH_STM32
		bool "Ti STM32"
		depends on ARCH_ARM
		depends on ARCH_ARM_CORTEX_M0 || ARCH_ARM_CORTEX_M4F || ARCH_ARM_CORTEX_M3
		help
			Ti STM32 Prozessor
	config MACH_LPC8XX
		bool "NXP LPC8xx"
		depends on ARCH_ARM
		depends on ARCH_ARM_CORTEX_M0PLUS
		help
			NXP LPC8xx Prozessor
endchoice
if MACH_VF610=y
source mach/vf610/Kconfig
endif
if MACH_LINUX=y
source mach/linux/Kconfig
endif
if MACH_STM32
source mach/stm32/Kconfig
endif
if MACH_LPC8XX
source mach/lpc8xx/Kconfig
endif
endmenu
